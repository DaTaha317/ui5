<mvc:View
    controllerName="ui5.controller.ValueHelper"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="ui5.controls"
>
    <VBox>
        <Label
            text="Companies"
            labelFor="multiInput"
        />
        <MultiInput
            id="multiInput"
            width="600px"
            valueHelpRequest=".onValueHelpRequested"
            suggestionRows="{ path: '/Suppliers', length: 10 }"
        >
            <suggestionColumns>
                <Column>
                    <Label text="Supplier Id" />
                </Column>
                <Column>
                    <Label text="Company Name" />
                </Column>
            </suggestionColumns>
            <suggestionRows>
                <ColumnListItem>
                    <Label text="{SupplierID}" />
                    <Label text="{CompanyName}" />
                </ColumnListItem>
            </suggestionRows>
        </MultiInput>

        <Label
            text="Suppliers"
            labelFor="valueHelperSupplier"
        />
        <custom:ValueHelperWrapper
            id="valueHelperSupplier"
            modelName=""
            entitySet="/Suppliers"
            codeBinding="SupplierID"
            codeLabel="Supplier testing Id"
            descBinding="CompanyName"
            descLabel="Company testing Name"
        />

        <Label
            text="Products"
            labelFor="valueHelperProduct"
        />
        <custom:ValueHelperWrapper
            id="valueHelperProduct"
            modelName=""
            entitySet="/Products"
            codeBinding="ProductID"
            codeLabel="Product ID"
            descBinding="ProductName"
            descLabel="Product Name"
        />
    </VBox>
</mvc:View>
