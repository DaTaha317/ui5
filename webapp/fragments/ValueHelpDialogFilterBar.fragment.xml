<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <ValueHelpDialog
        title="Company"
        ok=".onValueHelpOkPress"
        cancel=".onValueHelpCancelPress"
        afterClose=".onValueHelpAfterClose"
        supportRanges="true"
        key="{metadataModel>/codeBinding}"
        descriptionKey="{metadataModel>/descBinding}"
    >
        <filterBar>
            <fb:FilterBar
                advancedMode="true"
                search=".onFilterBarSearch"
                isRunningInValueHelpDialog="true"
            >
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="codeBinding"
                        label="{metadataModel>/codeLabel}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="{metadataModel>/codeBinding}" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="descBinding"
                        label="{metadataModel>/descLabel}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="{metadataModel>descBinding}" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
